{
  "name": "code-terminal",
  "displayName": "code-terminal",
  "description": "Terminal Manager",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "ssh",
    "terminal"
  ],
  "activationEvents": [
    "onCommand:extension.showServerList"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sshServers",
          "title": "Connection Manager",
          "icon": "resources/ssh.svg"
        }
      ]
    },
    "views": {
      "sshServers": [
        {
          "id": "sshServers",
          "name": "SSH Servers"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.openSSH",
        "title": "Open SSH",
        "icon": "$(terminal)"
      },
      {
        "command": "extension.addServer",
        "title": "Add SSH Server",
        "icon": "$(add)"
      },
      {
        "command": "extension.refreshServers",
        "title": "Reload Servers",
        "icon": "$(refresh)"
      },
      {
        "command": "extension.openServerList",
        "title": "Open Server Config",
        "icon": "$(folder-opened)"
      },
      {
        "command": "extension.removeServer",
        "title": "Remove SSH Server",
        "icon": "$(trash)"
      },
      {
        "command": "extension.renameServer",
        "title": "Rename SSH Server",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.addServer",
          "when": "view == sshServers",
          "group": "navigation"
        },
        {
          "command": "extension.refreshServers",
          "when": "view == sshServers",
          "group": "navigation"
        },
        {
          "command": "extension.openServerList",
          "when": "view == sshServers",
          "group": "navigation"
        },
        {
          "command": "extension.openSettingsFile",
          "when": "view == sshServers",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.openSSH",
          "when": "view == sshServers",
          "group": "inline"
        },
        {
          "command": "extension.removeServer",
          "when": "view == sshServers",
          "group": "inline"
        },
        {
          "command": "extension.renameServer",
          "when": "view == sshServers",
          "group": "inline"
        }
      ]
    },
    "activationEvents": [
      "*"
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}